<div class="container mt-5">
  <h1 class="text-center text-primary">Login</h1>

  <div class="card shadow-lg p-4 mx-auto" style="max-width: 400px;">
    <div class="card-body">
      <%= form_with url: login_path, method: :post, html: { class: "needs-validation", novalidate: true } do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label fw-bold" %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: "form-label fw-bold" %>
          <%= form.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
        </div>

        <div class="text-center">
          <%= form.submit "Log in", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-3">
    <p class="text-muted">Don't have an account? <%= link_to "Sign up", signup_path, class: "text-primary" %></p>
  </div>
</div>
