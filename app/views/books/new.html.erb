<div class="container mt-5">
  <h1 class="text-center text-primary">Add a New Book</h1>

  <div class="card shadow-lg p-4">
    <div class="card-body">
      <%= form_with model: @book, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label fw-bold" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter book title", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :author, class: "form-label fw-bold" %>
          <%= f.text_field :author, class: "form-control", placeholder: "Enter author name", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :isbn, class: "form-label fw-bold" %>
          <%= f.text_field :isbn, class: "form-control", placeholder: "Enter ISBN number", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :description, class: "form-label fw-bold" %>
          <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter book description", required: true %>
        </div>

        <div class="text-center">
          <%= f.submit "Add Book", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back to Books", books_path, class: "btn btn-outline-secondary btn-lg" %>
  </div>
</div>
