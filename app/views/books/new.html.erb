<div class="container mt-5">
  <h1 class="text-center text-primary">Add a New Book</h1>

  <div class="card shadow-sm p-4">
    <%= form_with model: @book, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter book title" %>
      </div>

      <div class="mb-3">
        <%= f.label :author, class: "form-label" %>
        <%= f.text_field :author, class: "form-control", placeholder: "Enter author name" %>
      </div>

      <div class="mb-3">
        <%= f.label :isbn, class: "form-label" %>
        <%= f.text_field :isbn, class: "form-control", placeholder: "Enter ISBN number" %>
      </div>

      <div class="mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter book description" %>
      </div>

      <div class="text-center">
        <%= f.submit "Add Book", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Back to Books", books_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
