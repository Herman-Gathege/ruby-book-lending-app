<h1>Add a New Book</h1>

<%= form_with model: @book, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div>
  <%= f.label :isbn %>
  <%= f.text_field :isbn %>  <!-- Add this field -->
</div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Add Book" %>
  </div>
<% end %>

<%= link_to "Back to Books", books_path %>
