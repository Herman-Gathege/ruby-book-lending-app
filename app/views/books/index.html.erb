<h1>Books index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<% if @books.present? %>
  <ul>
    <% @books.each do |book| %>
      <li>
        <strong>Title:</strong> <%= book.title %><br>
        <strong>ISBN:</strong> <%= book.isbn %> <!-- Ensure 'isbn' exists in the model -->
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No books found.</p>
  <%= link_to "Add a New Book", new_book_path %>
<% end %>
