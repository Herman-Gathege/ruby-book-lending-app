<div class="container mt-4">
  <h1 class="text-center text-primary"><%= @book.title %></h1>
  <div class="card shadow-lg">
    <div class="card-body">
      <h5 class="card-title"><strong>Title:</strong> <%= @book.title %></h5>
      <p class="card-text">
        <strong>ISBN:</strong> <%= @book.isbn %> <br>
        <strong>Author:</strong> <%= @book.author %> <br>
        <strong>Description:</strong> <%= @book.description %> <br>
        <strong>Available:</strong> 
        <% if @book.available? %>
          <span class="badge bg-success">Yes</span>
        <% else %>
          <span class="badge bg-danger">No</span>
        <% end %>
      </p>

      <div class="text-center">
        <% if @book.available? %>
          <%= button_to "Borrow", borrow_book_path(@book), method: :post, class: "btn btn-success" %>
        <% else %>
          <%= button_to "Return", return_book_path(@book), method: :patch, class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
  </div>
</div>
